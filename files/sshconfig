# Automatically add ssh keys to ssh-agent
AddKeysToAgent yes

# Set SSH keys for specific services
Host christianduerr.com
    IdentitiesOnly yes
    IdentityFile ~/.ssh/digitalocean

Host github.com
    IdentitiesOnly yes
    IdentityFile ~/.ssh/vcs

Host gitlab.com
    IdentitiesOnly yes
    IdentityFile ~/.ssh/vcs

Host aur.archlinux.org
    IdentityFile ~/.ssh/aur
    User undeadleech

Host backup
    IdentityFile ~/.ssh/backup
    User undeadleech

Host alacritty-bsd
    IdentityFile ~/.ssh/alacritty-bsd
    User undeadleech

Host monitoring
    IdentityFile ~/.ssh/monitoring
    User monitoring

Host proxmox
    IdentityFile ~/.ssh/proxmox
    User root
